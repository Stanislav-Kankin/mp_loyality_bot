# PROD environment.
# Copy to .env in the PROD directory.

# Telegram
BOT_TOKEN=CHANGE_ME_PROD
PAYMENT_PROVIDER_TOKEN=CHANGE_ME_PROD
ADMIN_TG_IDS=123456789
SELLER_TG_IDS=

# Payments
# Credits packs (minor units). Set real prices here.
PRICE_PACK_1_MINOR=100000
PRICE_PACK_3_MINOR=250000
PRICE_PACK_10_MINOR=700000
CURRENCY=RUB

# Postgres (separate DB/instance OR separate volume is required)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=loyalty
POSTGRES_USER=loyalty
POSTGRES_PASSWORD=CHANGE_ME
DATABASE_DSN=postgresql://loyalty:CHANGE_ME@postgres:5432/loyalty

# Worker sending
SEND_BATCH_SIZE=50
SEND_TICK_SECONDS=1
TG_GLOBAL_RATE_PER_SEC=25
RETRY_BASE_SECONDS=5
RETRY_MAX_SECONDS=3600

# Logging
LOG_LEVEL=INFO

# --- SuperAdmin Control Center (optional) ---
CENTRAL_DATABASE_DSN=
INSTANCE_ID=
INSTANCE_NAME=
METRICS_PUSH_INTERVAL_SECONDS=60
