# TEST environment (default).
# Copy to .env in the TEST directory.

# Telegram
BOT_TOKEN=CHANGE_ME_TEST
PAYMENT_PROVIDER_TOKEN=CHANGE_ME_TEST
ADMIN_TG_IDS=123456789
SELLER_TG_IDS=123456789

# Payments
# For credits packs (minor units). You can keep them small in TEST.
PRICE_PACK_1_MINOR=100
PRICE_PACK_3_MINOR=300
PRICE_PACK_10_MINOR=1000
CURRENCY=RUB

# Postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=loyalty
POSTGRES_USER=loyalty
POSTGRES_PASSWORD=loyalty_password
DATABASE_DSN=postgresql://loyalty:loyalty_password@postgres:5432/loyalty

# Worker sending
SEND_BATCH_SIZE=50
SEND_TICK_SECONDS=1
TG_GLOBAL_RATE_PER_SEC=25
RETRY_BASE_SECONDS=5
RETRY_MAX_SECONDS=3600

# Logging
LOG_LEVEL=INFO

# --- SuperAdmin Control Center (optional) ---
CENTRAL_DATABASE_DSN=
INSTANCE_ID=
INSTANCE_NAME=
METRICS_PUSH_INTERVAL_SECONDS=60
